{
    "author": "KBV",
    "name": "mioviewer",
    "version": "1.0.0",
    "license": "LGPL-3.0",
    "description": "MIO Viewer zur Darstellung von MIOs in einem Webbrowser",
    "repository": "github:kassenaerztliche-bundesvereinigung/mioviewer",
    "bugs": {
        "url": "https://github.com/kassenaerztliche-bundesvereinigung/mioviewer/issues",
        "email": "support.mio@kbv.de"
    },
    "keywords": [
        "kbv",
        "mio",
        "viewer",
        "fhir"
    ],
    "scripts": {
        "pretest": "npm unlink miotestdata && npm link miotestdata",
        "test": "react-scripts test --all --verbose --watchAll=false",
        "test:watch": "npm run pretest && react-scripts test --all --verbose",
        "test:coverage": "npm run pretest && react-scripts test --all --verbose --coverage --watchAll=false --testResultsProcessor jest-sonar-reporter",
        "test:debug": "npm run pretest && react-scripts --inspect-brk test --runInBand --no-cache --verbose",
        "lint": "eslint src/**/*.{js,ts,tsx}",
        "prettier": "prettier --write .",
        "start": "react-scripts start",
        "build": "react-scripts build",
        "eject": "react-scripts eject"
    },
    "jest": {
        "collectCoverageFrom": [
            "src/**/*.{ts,tsx}",
            "!src/**/index.ts",
            "!src/**/*.test.{ts,tsx}",
            "!src/index.tsx",
            "!src/serviceWorker.ts"
        ],
        "coverageThreshold": {
            "global": {
                "branches": 10,
                "functions": 10,
                "lines": 10,
                "statements": 10
            }
        },
        "coverageReporters": [
            "lcov",
            "text"
        ],
        "moduleNameMapper": {
            "^worker-loader!.+$": "<rootDir>/src/views/__test__/EmptyModule"
        }
    },
    "jestSonar": {
        "reportPath": "reports",
        "reportFile": "test-report.xml",
        "indent": 4
    },
    "dependencies": {
        "@ionic/react": "^5.3.1",
        "@ionic/react-router": "^5.3.1",
        "@kbv/mioparser": "^1.0.4",
        "lodash.debounce": "^4.0.8",
        "lottie-web": "^5.7.1",
        "moment": "^2.27.0",
        "pdfmake": "^0.1.68",
        "react": "^16.13.1",
        "react-dom": "^16.13.1",
        "react-feather": "^2.0.8",
        "react-redux": "^7.2.1",
        "react-router": "^5.2.0",
        "react-router-dom": "^5.2.0",
        "react-scripts": "^3.4.3"
    },
    "devDependencies": {
        "@ionic/react-test-utils": "0.0.3",
        "@testing-library/jest-dom": "^5.11.2",
        "@testing-library/react": "^10.4.8",
        "@types/node": "^14.0.27",
        "@types/pdfmake": "^0.1.14",
        "@types/react": "^16.9.44",
        "@types/react-dom": "^16.9.8",
        "@types/react-redux": "^7.1.9",
        "@types/react-router": "^5.1.7",
        "@types/react-router-dom": "^5.1.5",
        "@types/jest": "^26.0.9",
        "@types/lodash.debounce": "^4.0.6",
        "@typescript-eslint/eslint-plugin": "^3.8.0",
        "@typescript-eslint/parser": "^3.8.0",
        "comlink": "^4.3.0",
        "eslint": "^6.6.0",
        "eslint-config-prettier": "^6.11.0",
        "eslint-plugin-prettier": "^3.1.4",
        "eslint-plugin-react": "^7.20.5",
        "jest": "24.9.0",
        "jest-canvas-mock": "^2.2.0",
        "jest-sonar-reporter": "^2.0.0",
        "node-sass": "^4.14.1",
        "prettier": "^2.0.5",
        "react-animate-height": "^2.0.23",
        "react-hot-loader": "^4.12.21",
        "typesafe-actions": "^5.1.0",
        "typescript": "^3.9.7",
        "worker-loader": "^3.0.3"
    },
    "browserslist": {
        "production": [
            ">0.2%",
            "not dead",
            "not op_mini all"
        ],
        "development": [
            "last 1 chrome version",
            "last 1 firefox version",
            "last 1 safari version"
        ]
    }
}
